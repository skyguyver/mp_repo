<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <!--customer tree view-->
    <record id="customer_tree_view" model="ir.ui.view">
        <field name="name">customer tree view</field>
        <field name="model">mp.customer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <!--customer form view-->
    <record id="customer_form_view" model="ir.ui.view">
        <field name="name">customer form view</field>
        <field name="model">mp.customer</field>
        <field name="priority" eval="1" />
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group colspan="2">
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="mobile_no"/>
                            <field name="date_of_birth"/>
                        </group>
                    </group>
                    <group>
                          <table style='width:100%;'>
                            <tr>
                              <th style='width:7%;'><label for="create_date" string='Created:' style="font-weight:bold;"/></th>
                              <td style='width:15%;'><field name="create_date" readonly="1"/></td>
                              <th style='width:3%;'><label for="create_uid" string='By:' style="font-weight:bold;"/></th>
                              <td style='width:20%;'><field name="create_uid" readonly="1" options="{'no_open':True,'no_create':True}"/></td>
                              <th style='width:7%;'><label for="write_date" string='Last updated:' style="font-weight:bold;"/></th>
                              <td style='width:15%;'><field name="write_date" readonly="1"/></td>
                              <th style='width:3%;'><label for="write_uid" string='By:' style="font-weight:bold;"/></th>
                              <td><field name="write_uid" readonly="1" options="{'no_open':True,'no_create':True}"/></td>
                            </tr>
                         </table>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!--Define Action-->
    <record id="customer_action" model="ir.actions.act_window">
        <field name="name">Customer</field>
        <field name="res_model">mp.customer</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click here to create new customer
            </p>
        </field>
    </record>
    <record id="customer_acct_action" model="ir.actions.act_window">
        <field name="name">Customer account</field>
        <field name="res_model">mp.customer_acct</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click here to create new customer account
            </p>
        </field>
    </record>
</odoo>